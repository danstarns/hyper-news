{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "connections": {
    "dgraph": {
      "type": "dgraph",
      "grpcTarget": "localhost:8080"
    },
    "dgraph-gql": {
      "type": "http",
      "endpoint": "http://localhost:8080/query"
    }
  }
}
